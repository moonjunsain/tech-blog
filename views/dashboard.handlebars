{{#if loggedIn}}
<div class="row ">
    <ul class="d-flex justify-content-center">
    {{#each posts}}
        <a href="/dashboard/{{id}}">
            <li class="bg-secondary text-white col-10 p-3 d-flex justify-content-between">
                <span>{{title}}</span>
                <span>{{post_date}}</span>
            </li>
        </a>
    {{/each}}
    </ul>
</div>

<div class="d-flex justify-content-center align-items-end">
    <a id="new-post" class="btn btn-primary my-3" href="/post">New Post</a>
</div>
{{else}}

<div class="row d-flex justify-content-center">
    <h2>Log in to upload your post!</h2>
</div>
{{/if}}